<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:orientation="vertical" >

  <TableLayout
    android:id="@+id/table"
    style="@style/Fill.Width"
    android:stretchColumns="0" >

    <TableRow
      android:id="@+id/row_lat"
      style="@style/Fill.Width" >

      <TextView
        android:id="@+id/lbl_lat"
        style="@style/Wrap"
        android:text="@string/lat" >
      </TextView>

      <TextView
        android:id="@+id/val_lat"
        style="@style/Wrap" >
      </TextView>
    </TableRow>

    <TableRow
      android:id="@+id/row_lon"
      style="@style/Fill.Width" >

      <TextView
        android:id="@+id/lbl_lon"
        style="@style/Wrap"
        android:text="@string/lon" >
      </TextView>

      <TextView
        android:id="@+id/val_lon"
        style="@style/Wrap" >
      </TextView>
    </TableRow>

    <TableRow
      android:id="@+id/row_dist"
      style="@style/Fill.Width" >

      <TextView
        android:id="@+id/lbl_dist"
        style="@style/Wrap"
        android:text="@string/dist" >
      </TextView>

      <TextView
        android:id="@+id/val_dist"
        style="@style/Wrap" >
      </TextView>
    </TableRow>

    <TableRow
      android:id="@+id/row_time"
      style="@style/Fill.Width" >

      <TextView
        android:id="@+id/lbl_time"
        style="@style/Wrap"
        android:text="@string/time" >
      </TextView>

      <TextView
        android:id="@+id/val_time"
        style="@style/Wrap" >
      </TextView>
    </TableRow>
  </TableLayout>

</LinearLayout>